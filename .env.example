# Lockzone AI Floorplan - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-minimum-32-characters

# AI Service API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
TAVILY_API_KEY=your-tavily-api-key

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Database Configuration
USE_DATABASE=false
DATABASE_URL=postgresql://localhost/lockzone_ai

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour
REDIS_URL=memory://

# AI Retry Configuration
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=2
AI_TIMEOUT=120

# Simpro OAuth (if using Simpro integration)
SIMPRO_CLIENT_ID=your-simpro-client-id
SIMPRO_CLIENT_SECRET=your-simpro-client-secret
SIMPRO_TENANT=your-simpro-tenant

# Optional: API Key for secure endpoints
API_KEY=your-optional-api-key
